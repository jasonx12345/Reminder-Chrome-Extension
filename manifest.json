{
  "manifest_version": 3,
  "name": "Remind-Bot",
  "version": "0.4.0",
  "description": "Quick reminders with future-only dates and a clean UI.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Remind-Bot"
  },
  "icons": {
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ]
}
